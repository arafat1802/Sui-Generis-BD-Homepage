---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Solutions | SuigenerisBD">
  <div class="wrapper">
    <div class="paper-surface">
      <!-- Margin Rail -->
      <aside class="margin-rail">
        <div class="vertical-text">
          SOLUTIONS — 2024
        </div>
      </aside>

      <!-- Main Content -->
      <main class="main-content">
        <!-- Background Pattern -->
        <svg class="bg-pattern" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
          <path fill="var(--ink-primary)" d="M45.7,-76.3C58.9,-69.3,69.1,-58.3,77.3,-46.3C85.5,-34.3,91.7,-21.3,90.4,-8.9C89.1,3.5,80.3,15.3,71.7,26.4C63.1,37.5,54.7,47.9,44.6,56.3C34.5,64.7,22.7,71.1,10.2,72.6C-2.3,74.1,-15.5,70.7,-27.6,65.3C-39.7,59.9,-50.7,52.5,-60.1,43.2C-69.5,33.9,-77.3,22.7,-79.8,10.4C-82.3,-1.9,-79.5,-15.3,-72.6,-26.8C-65.7,-38.3,-54.7,-47.9,-43.1,-55.5C-31.5,-63.1,-19.3,-68.7,-6.6,-67.7C6.1,-66.7,18.3,-59.1,32.5,-83.3"></path>
        </svg>

        <!-- Header -->
        <Header currentPath="/solutions" />

        <!-- Page Header -->
        <section class="page-header animate-up delay-2">
          <span class="hero-overline">Our Expertise</span>
          <h1>Solutions Built<br />for Impact.</h1>
          <p class="lead">We architect digital ecosystems that blend technical excellence with business intelligence, delivering solutions that scale with your ambitions.</p>
        </section>

        <!-- Solutions Grid -->
        <section class="solutions-grid animate-up delay-3">
          
          <!-- Solution 1: System Architecture -->
          <article class="solution-item">
            <div class="solution-number">01</div>
            <div class="solution-content">
              <h2>System Architecture</h2>
              <p class="solution-description">Backend infrastructure designed for resilience, scalability, and performance. We build the invisible foundation that powers your digital presence.</p>
              
              <div class="solution-details">
                <h3>Key Services</h3>
                <ul>
                  <li>Microservices Architecture</li>
                  <li>Cloud Infrastructure Design</li>
                  <li>API Development & Integration</li>
                  <li>Database Optimization</li>
                  <li>DevOps & CI/CD Pipelines</li>
                  <li>System Security & Compliance</li>
                </ul>
              </div>

              <div class="tech-stack">
                <span class="tech-tag">Node.js</span>
                <span class="tech-tag">Python</span>
                <span class="tech-tag">PostgreSQL</span>
                <span class="tech-tag">MongoDB</span>
                <span class="tech-tag">Docker</span>
                <span class="tech-tag">AWS</span>
              </div>
            </div>
          </article>

          <!-- Solution 2: Native Interface -->
          <article class="solution-item">
            <div class="solution-number">02</div>
            <div class="solution-content">
              <h2>Native Interface</h2>
              <p class="solution-description">User experiences that feel intuitive across cultures. We design interfaces that respect local context while maintaining global standards.</p>
              
              <div class="solution-details">
                <h3>Key Services</h3>
                <ul>
                  <li>UI/UX Research & Strategy</li>
                  <li>Responsive Web Design</li>
                  <li>Mobile App Development</li>
                  <li>Design Systems & Components</li>
                  <li>Accessibility & Localization</li>
                  <li>Prototyping & User Testing</li>
                </ul>
              </div>

              <div class="tech-stack">
                <span class="tech-tag">React</span>
                <span class="tech-tag">Vue.js</span>
                <span class="tech-tag">Astro</span>
                <span class="tech-tag">Tailwind CSS</span>
                <span class="tech-tag">Figma</span>
                <span class="tech-tag">React Native</span>
              </div>
            </div>
          </article>

          <!-- Solution 3: Digital Sovereignty -->
          <article class="solution-item">
            <div class="solution-number">03</div>
            <div class="solution-content">
              <h2>Digital Sovereignty</h2>
              <p class="solution-description">SEO-optimized platforms that ensure your message cuts through the noise. We help you own your digital narrative.</p>
              
              <div class="solution-details">
                <h3>Key Services</h3>
                <ul>
                  <li>Technical SEO Audits</li>
                  <li>Content Strategy & Architecture</li>
                  <li>Performance Optimization</li>
                  <li>Analytics & Data Insights</li>
                  <li>Social Media Integration</li>
                  <li>Growth Marketing Support</li>
                </ul>
              </div>

              <div class="tech-stack">
                <span class="tech-tag">Google Analytics</span>
                <span class="tech-tag">Lighthouse</span>
                <span class="tech-tag">Semrush</span>
                <span class="tech-tag">Schema.org</span>
                <span class="tech-tag">Cloudflare</span>
                <span class="tech-tag">CDN</span>
              </div>
            </div>
          </article>

          <!-- Solution 4: Custom Development -->
          <article class="solution-item">
            <div class="solution-number">04</div>
            <div class="solution-content">
              <h2>Custom Development</h2>
              <p class="solution-description">Bespoke software tailored to your unique business requirements. No templates, no compromises—just solutions that fit.</p>
              
              <div class="solution-details">
                <h3>Key Services</h3>
                <ul>
                  <li>Enterprise Application Development</li>
                  <li>E-commerce Solutions</li>
                  <li>SaaS Platform Development</li>
                  <li>Legacy System Modernization</li>
                  <li>Third-party Integrations</li>
                  <li>Technical Consulting</li>
                </ul>
              </div>

              <div class="tech-stack">
                <span class="tech-tag">Full Stack</span>
                <span class="tech-tag">GraphQL</span>
                <span class="tech-tag">TypeScript</span>
                <span class="tech-tag">Redis</span>
                <span class="tech-tag">Kubernetes</span>
                <span class="tech-tag">Stripe</span>
              </div>
            </div>
          </article>

        </section>

        <!-- CTA Section -->
        <section class="cta-section animate-up delay-3">
          <div class="cta-content">
            <h2>Ready to build something unique?</h2>
            <p>Let's discuss how we can architect a solution tailored to your vision.</p>
            <a href="#" class="btn-ink">Start a Project_</a>
          </div>
        </section>

        <!-- Footer -->
        <Footer />
      </main>
    </div>
  </div>
</Layout>

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Rozha+One&family=Space+Mono:ital,wght@0,400;0,700;1,400&display=swap');

  :root {
    --bg-void: #1a1a1a;
    --bg-paper: #0a0a0a;
    --ink-primary: #F0F0F0;
    --ink-secondary: #A0A0A0;
    --accent-margin: #E69138;
    --font-display: 'Rozha One', serif; 
    --font-tech: 'Space Mono', monospace; 
    
    --spacing-unit: 8px;
    --container-width: 1200px;
    --transition-speed: 0.4s;
  }

  [data-theme="light"] {
    --bg-void: #CD202C;
    --bg-paper: #FDFBF7;
    --ink-primary: #0F0F0F;
    --ink-secondary: #4A4A4A;
    --accent-margin: #CD202C; 
  }

  * { margin: 0; padding: 0; box-sizing: border-box; }
  
  body {
    background-color: var(--bg-void);
    color: var(--ink-primary);
    font-family: var(--font-tech);
    line-height: 1.6;
    overflow-x: hidden;
    transition: background-color var(--transition-speed) ease;
    -webkit-font-smoothing: antialiased;
  }

  h1, h2, h3 {
    font-family: var(--font-display);
    font-weight: 400; 
    line-height: 1.1;
  }

  .wrapper {
    display: flex;
    justify-content: center;
    padding: 4vh 2vw;
    min-height: 100vh;
  }

  .paper-surface {
    background-color: var(--bg-paper);
    width: 100%;
    max-width: var(--container-width);
    min-height: 92vh;
    position: relative;
    box-shadow: 0 20px 50px rgba(0,0,0,0.2);
    display: grid;
    grid-template-columns: 80px 1fr; 
    transition: background-color var(--transition-speed) ease, color var(--transition-speed) ease;
  }

  .margin-rail {
    height: 100%;
    border-right: 1px solid rgba(0,0,0,0.05);
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 40px;
  }

  .vertical-text {
    writing-mode: vertical-rl;
    transform: rotate(180deg);
    margin-top: auto;
    padding-bottom: 80px;
    color: var(--accent-margin);
    font-size: 0.7rem;
    letter-spacing: 2px;
    text-transform: uppercase;
  }

  .margin-rail::after {
    content: '';
    position: absolute;
    right: 12px; 
    top: 0;
    bottom: 0;
    width: 4px;
    border-left: 1px solid var(--accent-margin);
    border-right: 1px solid var(--accent-margin);
    opacity: 0.8;
  }

  .main-content {
    padding: 60px 80px;
    position: relative;
  }

  .page-header {
    margin-bottom: 100px;
  }

  .hero-overline {
    color: var(--bg-void);
    font-size: 0.9rem;
    font-weight: 700;
    margin-bottom: 16px;
    display: block;
    text-transform: uppercase;
    letter-spacing: 2px;
  }
  [data-theme="dark"] .hero-overline { color: var(--accent-margin); }

  .page-header h1 {
    font-size: clamp(3rem, 6vw, 5rem);
    margin-bottom: 32px;
    color: var(--ink-primary);
  }

  .page-header .lead {
    max-width: 600px;
    color: var(--ink-secondary);
    font-size: 1.2rem;
    line-height: 1.8;
  }

  .btn-ink {
    display: inline-flex;
    align-items: center;
    padding: 16px 32px;
    background: var(--ink-primary);
    color: var(--bg-paper);
    text-decoration: none;
    font-weight: 700;
    font-size: 0.9rem;
    border: 1px solid var(--ink-primary);
    transition: all 0.3s ease;
    clip-path: polygon(0 0, 100% 0, 100% 85%, 95% 100%, 0 100%); 
  }

  .btn-ink:hover {
    background: transparent;
    color: var(--ink-primary);
    transform: translateY(-2px);
    box-shadow: 4px 4px 0 var(--bg-void);
  }

  .bg-pattern {
    position: absolute;
    top: 20%;
    right: -100px;
    width: 600px;
    height: 600px;
    opacity: 0.04;
    pointer-events: none;
    z-index: 0;
  }
  
  [data-theme="dark"] .bg-pattern { opacity: 0.1; }

  /* Solutions Page Specific Styles */
  .solutions-grid {
    display: flex;
    flex-direction: column;
    gap: 80px;
    margin-bottom: 100px;
  }

  .solution-item {
    display: grid;
    grid-template-columns: 120px 1fr;
    gap: 40px;
    padding-bottom: 80px;
    border-bottom: 1px solid rgba(0,0,0,0.1);
  }

  .solution-item:last-child {
    border-bottom: none;
  }

  .solution-number {
    font-family: var(--font-display);
    font-size: 5rem;
    color: var(--accent-margin);
    opacity: 0.3;
    line-height: 1;
  }

  .solution-content h2 {
    font-size: 2.5rem;
    margin-bottom: 20px;
    color: var(--ink-primary);
  }

  .solution-description {
    font-size: 1.1rem;
    color: var(--ink-secondary);
    margin-bottom: 32px;
    line-height: 1.8;
  }

  .solution-details {
    margin-bottom: 32px;
  }

  .solution-details h3 {
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 16px;
    color: var(--bg-void);
  }

  [data-theme="dark"] .solution-details h3 {
    color: var(--accent-margin);
  }

  .solution-details ul {
    list-style: none;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 12px;
  }

  .solution-details li {
    font-size: 0.9rem;
    color: var(--ink-secondary);
    padding-left: 20px;
    position: relative;
  }

  .solution-details li::before {
    content: '→';
    position: absolute;
    left: 0;
    color: var(--accent-margin);
  }

  .tech-stack {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
  }

  .tech-tag {
    padding: 8px 16px;
    background: rgba(0,0,0,0.05);
    border: 1px solid rgba(0,0,0,0.1);
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: var(--ink-secondary);
    transition: all 0.3s ease;
  }

  .tech-tag:hover {
    background: var(--ink-primary);
    color: var(--bg-paper);
    border-color: var(--ink-primary);
  }

  .cta-section {
    background: rgba(0,0,0,0.02);
    padding: 80px 60px;
    text-align: center;
    margin-bottom: 80px;
    border-top: 2px solid var(--accent-margin);
  }

  [data-theme="dark"] .cta-section {
    background: rgba(255,255,255,0.02);
  }

  .cta-content h2 {
    font-size: 2.5rem;
    margin-bottom: 20px;
    color: var(--ink-primary);
  }

  .cta-content p {
    font-size: 1.1rem;
    color: var(--ink-secondary);
    margin-bottom: 32px;
  }

  @keyframes reveal {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .animate-up {
    animation: reveal 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
    opacity: 0;
  }
  
  .delay-1 { animation-delay: 0.1s; }
  .delay-2 { animation-delay: 0.2s; }
  .delay-3 { animation-delay: 0.3s; }

  @media (max-width: 900px) {
    .paper-surface { grid-template-columns: 40px 1fr; }
    .margin-rail::after { right: 6px; width: 3px; border-width: 1px; }
    .main-content { padding: 40px; }
    .solution-item {
      grid-template-columns: 1fr;
      gap: 20px;
    }
    .solution-number {
      font-size: 3rem;
    }
    .solution-content h2 {
      font-size: 2rem;
    }
    .solution-details ul {
      grid-template-columns: 1fr;
    }
    .cta-section {
      padding: 60px 40px;
    }
    .bg-pattern { width: 300px; right: -50px; }
  }
</style>


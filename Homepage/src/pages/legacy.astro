<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Rozha+One&family=Space+Mono:ital,wght@0,400;0,700;1,400&display=swap');

  :root {
    --bg-void: #1a1a1a;
    --bg-paper: #0a0a0a;
    --ink-primary: #F0F0F0;
    --ink-secondary: #A0A0A0;
    --accent-margin: #E69138;
    --font-display: 'Rozha One', serif; 
    --font-tech: 'Space Mono', monospace; 
    
    --spacing-unit: 8px;
    --container-width: 1200px;
    --transition-speed: 0.4s;
  }

  [data-theme="light"] {
    --bg-void: #CD202C;
    --bg-paper: #FDFBF7;
    --ink-primary: #0F0F0F;
    --ink-secondary: #4A4A4A;
    --accent-margin: #CD202C; 
  }

  * { margin: 0; padding: 0; box-sizing: border-box; }
  
  body {
    background-color: var(--bg-void);
    color: var(--ink-primary);
    font-family: var(--font-tech);
    line-height: 1.6;
    overflow-x: hidden;
    transition: background-color var(--transition-speed) ease;
    -webkit-font-smoothing: antialiased;
  }

  h1, h2, h3 {
    font-family: var(--font-display);
    font-weight: 400; 
    line-height: 1.1;
  }

  .wrapper {
    display: flex;
    justify-content: center;
    padding: 4vh 2vw;
    min-height: 100vh;
  }

  .paper-surface {
    background-color: var(--bg-paper);
    width: 100%;
    max-width: var(--container-width);
    min-height: 92vh;
    position: relative;
    box-shadow: 0 20px 50px rgba(0,0,0,0.2);
    display: grid;
    grid-template-columns: 80px 1fr; 
    transition: background-color var(--transition-speed) ease, color var(--transition-speed) ease;
  }

  .margin-rail {
    height: 100%;
    border-right: 1px solid rgba(0,0,0,0.05);
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 40px;
  }

  .vertical-text {
    writing-mode: vertical-rl;
    transform: rotate(180deg);
    margin-top: auto;
    padding-bottom: 80px;
    color: var(--accent-margin);
    font-size: 0.7rem;
    letter-spacing: 2px;
    text-transform: uppercase;
  }

  .margin-rail::after {
    content: '';
    position: absolute;
    right: 12px; 
    top: 0;
    bottom: 0;
    width: 4px;
    border-left: 1px solid var(--accent-margin);
    border-right: 1px solid var(--accent-margin);
    opacity: 0.8;
  }

  .main-content {
    padding: 60px 80px;
    position: relative;
  }

  .page-header {
    margin-bottom: 80px;
  }

  .hero-overline {
    color: var(--bg-void);
    font-size: 0.9rem;
    font-weight: 700;
    margin-bottom: 16px;
    display: block;
    text-transform: uppercase;
    letter-spacing: 2px;
  }
  [data-theme="dark"] .hero-overline { color: var(--accent-margin); }

  .page-header h1 {
    font-size: clamp(3rem, 6vw, 5rem);
    margin-bottom: 32px;
    color: var(--ink-primary);
  }

  .page-header .lead {
    max-width: 600px;
    color: var(--ink-secondary);
    font-size: 1.2rem;
    line-height: 1.8;
  }

  .section-title {
    font-size: 2.5rem;
    margin-bottom: 60px;
    color: var(--ink-primary);
    border-bottom: 2px solid var(--accent-margin);
    padding-bottom: 20px;
  }

  .btn-ink {
    display: inline-flex;
    align-items: center;
    padding: 16px 32px;
    background: var(--ink-primary);
    color: var(--bg-paper);
    text-decoration: none;
    font-weight: 700;
    font-size: 0.9rem;
    border: 1px solid var(--ink-primary);
    transition: all 0.3s ease;
    clip-path: polygon(0 0, 100% 0, 100% 85%, 95% 100%, 0 100%); 
  }

  .btn-ink:hover {
    background: transparent;
    color: var(--ink-primary);
    transform: translateY(-2px);
    box-shadow: 4px 4px 0 var(--bg-void);
  }

  .bg-pattern {
    position: absolute;
    top: 20%;
    right: -100px;
    width: 600px;
    height: 600px;
    opacity: 0.04;
    pointer-events: none;
    z-index: 0;
  }
  
  [data-theme="dark"] .bg-pattern { opacity: 0.1; }

  /* Stats Section */
  .stats-section {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 40px;
    margin-bottom: 100px;
    padding: 60px 40px;
    background: rgba(0,0,0,0.02);
    border-top: 2px solid var(--accent-margin);
    border-bottom: 2px solid var(--accent-margin);
  }

  [data-theme="dark"] .stats-section {
    background: rgba(255,255,255,0.02);
  }

  .stat-item {
    text-align: center;
  }

  .stat-number {
    font-family: var(--font-display);
    font-size: 4rem;
    color: var(--accent-margin);
    line-height: 1;
    margin-bottom: 12px;
  }

  .stat-label {
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--ink-secondary);
  }

  /* Projects Section */
  .projects-section {
    margin-bottom: 100px;
  }

  .project-card {
    margin-bottom: 80px;
    padding-bottom: 80px;
    border-bottom: 1px solid rgba(0,0,0,0.1);
  }

  .project-card:last-child {
    border-bottom: none;
  }

  .project-header {
    margin-bottom: 24px;
  }

  .project-meta {
    display: flex;
    gap: 16px;
    margin-bottom: 12px;
  }

  .project-category {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--accent-margin);
    font-weight: 700;
  }

  .project-year {
    font-size: 0.8rem;
    color: var(--ink-secondary);
  }

  .project-header h3 {
    font-size: 2.5rem;
    color: var(--ink-primary);
  }

  .project-description {
    font-size: 1.1rem;
    color: var(--ink-secondary);
    line-height: 1.8;
    margin-bottom: 32px;
  }

  .project-impact {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 24px;
    margin-bottom: 32px;
    padding: 24px;
    background: rgba(230, 145, 56, 0.05);
    border-left: 3px solid var(--accent-margin);
  }

  .impact-item {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .impact-item strong {
    font-family: var(--font-display);
    font-size: 2rem;
    color: var(--accent-margin);
  }

  .impact-item span {
    font-size: 0.85rem;
    color: var(--ink-secondary);
  }

  .project-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
  }

  .tech-badge {
    padding: 8px 16px;
    background: rgba(0,0,0,0.05);
    border: 1px solid rgba(0,0,0,0.1);
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: var(--ink-secondary);
  }

  /* Testimonials Section */
  .testimonials-section {
    margin-bottom: 100px;
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 32px;
  }

  .testimonial-card {
    padding: 32px;
    border: 1px solid rgba(0,0,0,0.1);
    background: rgba(0,0,0,0.01);
  }

  [data-theme="dark"] .testimonial-card {
    background: rgba(255,255,255,0.02);
  }

  .testimonial-text {
    font-size: 1rem;
    color: var(--ink-secondary);
    line-height: 1.8;
    margin-bottom: 24px;
    font-style: italic;
  }

  .testimonial-author strong {
    display: block;
    color: var(--ink-primary);
    margin-bottom: 4px;
  }

  .testimonial-author span {
    font-size: 0.85rem;
    color: var(--ink-secondary);
  }

  /* Recognition Section */
  .recognition-section {
    margin-bottom: 100px;
  }

  .recognition-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 32px;
  }

  .recognition-item {
    text-align: center;
    padding: 40px 24px;
    border: 1px solid rgba(0,0,0,0.1);
    transition: all 0.3s ease;
  }

  .recognition-item:hover {
    border-color: var(--accent-margin);
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0,0,0,0.1);
  }

  .recognition-icon {
    font-size: 3rem;
    margin-bottom: 16px;
  }

  .recognition-item h3 {
    font-size: 1.3rem;
    margin-bottom: 8px;
    color: var(--ink-primary);
  }

  .recognition-item p {
    font-size: 0.9rem;
    color: var(--ink-secondary);
  }

  /* CTA Section */
  .cta-section {
    background: rgba(0,0,0,0.02);
    padding: 80px 60px;
    text-align: center;
    margin-bottom: 80px;
    border-top: 2px solid var(--accent-margin);
  }

  [data-theme="dark"] .cta-section {
    background: rgba(255,255,255,0.02);
  }

  .cta-content h2 {
    font-size: 2.5rem;
    margin-bottom: 20px;
    color: var(--ink-primary);
  }

  .cta-content p {
    font-size: 1.1rem;
    color: var(--ink-secondary);
    margin-bottom: 32px;
  }

  @keyframes reveal {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .animate-up {
    animation: reveal 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
    opacity: 0;
  }
  
  .delay-1 { animation-delay: 0.1s; }
  .delay-2 { animation-delay: 0.2s; }
  .delay-3 { animation-delay: 0.3s; }

  @media (max-width: 900px) {
    .paper-surface { grid-template-columns: 40px 1fr; }
    .margin-rail::after { right: 6px; width: 3px; border-width: 1px; }
    .main-content { padding: 40px; }
    .stats-section {
      grid-template-columns: repeat(2, 1fr);
      padding: 40px 20px;
    }
    .stat-number {
      font-size: 3rem;
    }
    .project-header h3 {
      font-size: 2rem;
    }
    .project-impact {
      grid-template-columns: 1fr;
    }
    .testimonials-grid,
    .recognition-grid {
      grid-template-columns: 1fr;
    }
    .cta-section {
      padding: 60px 40px;
    }
    .bg-pattern { width: 300px; right: -50px; }
  }
</style>

<script is:inline>
  // Intersection Observer for scroll animations
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.style.opacity = '1';
        entry.target.style.transform = 'translateY(0)';
      }
    });
  }, { threshold: 0.2 });

  document.querySelectorAll('.animate-up').forEach(el => observer.observe(el));
</script>
